{% extends 'admin_base.html.twig' %}
{% block body %}
<div class="row">
      <div class="col-sm-8">
      </div>
      <div class="col-sm-4">
        <div class="button-action">
            <a class="btn btn-primary action-new" href="{{ path('category_new')}}" target="_self">
                                                                      Add Category
            </a>
        </div>
      </div>
</div>
<div class="row">

    </div>
  <div class="col-sm-12">
    <div id="gigs">Loading...</div>
  </div>
</div>
{% endblock %}


{% block javascripts %}
<script>
$(function() {
  $('#gigs').initDataTables({{ datatable_settings(datatable) }}, {
      searching: true
  }).then(function(dt) {
      // dt contains the initialized instance of DataTables
      $('#orders tbody').on( 'click', 'tr', function () {
        if ( $(this).hasClass('selected') ) {
            $(this).removeClass('selected');
        }
        else {
            dt.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
        }
    } );

  });
});
</script>

{% endblock %}
