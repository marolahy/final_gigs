<form method="post" action="{{ path('gigs_delete', {'id': gig.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gig.id) }}">
    <button class="btn">Delete</button>
</form>